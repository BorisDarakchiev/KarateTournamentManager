@model IEnumerable<dynamic>

<h2>Мачове на потребителя</h2>

@if (!Model.Any())
{
    <p>Няма намерени мачове за този потребител.</p>
}
else
{
    @foreach (var tournament in Model)
    {
        <h3>@tournament.TournamentName</h3>
        @if (!tournament.Matches.Any())
        {
            <p>Няма мачове за този турнир.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Участник 1</th>
                        <th>Участник 2</th>
                        <th>Резултат</th>
                        <th>Част</th>
                        <th>Татами</th>
                        <th>Статус</th>
                        <th>Победител</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var match in tournament.Matches)
                    {
                        <tr>
                            <td>@match.Participant1Name</td>
                            <td>@match.Participant2Name</td>
                            <td>@match.Participant1Score : @match.Participant2Score</td>
                            <td>@match.Period</td>
                            <td>@match.Tatami</td>
                            <td>@match.Status</td>
                            <td>@match.WinnerName ?? "Все още няма победител"</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
}
